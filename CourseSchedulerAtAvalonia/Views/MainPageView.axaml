						Grid.Row="2"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Margin="0,0,0,10">
          </Button>
          <CheckBox
						x:Name="CB_OpenSectionOnly"
						Content="Open Section Only"
						Grid.Column="0"
						VerticalAlignment="Top"
						HorizontalAlignment="Left"
						Margin="5,0,0,10"
						Grid.Row="3">
          </CheckBox>
          <CheckBox
						x:Name="CB_ShowFC"
						Content="Show Freshman Connection Program"
						Margin="5,0,0,10"
						VerticalAlignment="Top"
						HorizontalAlignment="Left"
						Grid.Column="1"
						Grid.Row="3">
          </CheckBox>
          <ToggleButton
						x:Name="MUIB_NoInstructors"
						Grid.Column="0"
						Grid.Row="4"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Content="Exclude These Instructors:">
          </ToggleButton>
          <ToggleButton
						x:Name="MUIB_NoTime"
						Grid.Column="1"
						Grid.Row="4"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Content="Exclude These Time Periods:">
          </ToggleButton>
          <StackPanel
						x:Name="AcademicYearPanel"
						Orientation="Horizontal"
						Grid.Column="0"
						Grid.Row="5"
						Margin="27, 3, 0, 10">
            <TextBlock
							Text="Semester:"
							VerticalAlignment="Center">
            </TextBlock>
            <ComboBox
							x:Name="Semester"
							SelectedIndex="2"
							Margin="10, 0, 0, 0"
							VerticalAlignment="Center">
            </ComboBox>
          </StackPanel>
          <Button 
            Grid.Column="1" 
            Grid.Row="5" 
            Content="Save Query">
          </Button>
        </Grid>
        <StackPanel
					x:Name="SP_Course"
					Grid.Row="2"
					Grid.Column="0">
        </StackPanel>
