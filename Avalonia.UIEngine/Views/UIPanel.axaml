<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Avalonia.UIEngine.Views;assembly=Avalonia.UIEngine"
             xmlns:node="clr-namespace:UIEngine;assembly=UIEngine"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.UIEngine.Views.UIPanel" Name="Me">
  <StackPanel Orientation="Horizontal" Spacing="10">
    <ContentControl Content="{Binding test}">
      <ContentControl.DataTemplates>
        <DataTemplate DataType="{x:Type node:CollectionNode}">
          <TextBlock Text="me"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type node:ObjectNode}">
          <local:ObjectBox/>
        </DataTemplate>
      </ContentControl.DataTemplates>
    </ContentControl>
    <ItemsControl Items="{Binding Items}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <ContentControl Content="{Binding}"/>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </StackPanel>
</UserControl>
