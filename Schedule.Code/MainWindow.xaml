<controls:MetroWindow 
		x:Class="Schedule.Code.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedule.Code"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
		xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
		xmlns:chrome="http://schemes.grabacr.net/winfx/2014/chrome"
		xmlns:controls="http://schemes.grabacr.net/winfx/2014/controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
		FontFamily="Segoe UI"
		Background="{DynamicResource ThemeBrushKey}"
		IsRestoringWindowPlacement="True"
		UseLayoutRounding="True"
		TextOptions.TextFormattingMode="Display">
	<Grid controls:MetroWindow.IsCaptionBar="True">
		<controls:SystemButtons HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="White"/>
	</Grid>
</controls:MetroWindow>
