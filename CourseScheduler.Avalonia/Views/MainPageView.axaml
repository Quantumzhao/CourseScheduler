<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CourseScheduler.Avalonia.Views.MainPageView"
             Background="{DynamicResource ThemeBackgroundColor}">
  <Grid RowDefinitions="* Auto" ColumnDefinitions="Auto *">
    <Border Classes="Card" Grid.Row="0">
      <Grid RowDefinitions="Auto *">
        <TextBlock
					Classes="Heading"
					Text="New Course"
					Grid.Row="0">
        </TextBlock>
        <ScrollViewer Grid.Row="1" Margin="0 10 0 0">
          <Grid RowDefinitions="Auto *">
            <!-- Commands Panel -->
            <Grid
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Grid.Row="0"
              ColumnDefinitions="* *"
              RowDefinitions="Auto Auto Auto Auto Auto">
              <!-- Add Course Panel -->
              <StackPanel
                Grid.Column="0"
                Grid.Row="0"
                Orientation="Horizontal"
                Grid.ColumnSpan="2" 
                Margin="0 10 0 0" Spacing="10">
                <TextBlock
                  Classes="Label"
                  Text="Pick one: "
                  VerticalAlignment="Center"/>
                <TextBox
                  x:Name="TB_CourseName"
                  Width="100"
                  VerticalAlignment="Center"/>
                <Button
                  Classes="Primary Icon"
                  x:Name="AddCourse"
                  IsDefault="True"
                  VerticalAlignment="Center">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Classes="Icon" Text="&#xE109;" VerticalAlignment="Center" Foreground="{DynamicResource HighlightForegroundBrush}"/>
                    <TextBlock Text="Add" Foreground="{DynamicResource HighlightForegroundBrush}"/>
                  </StackPanel>
                </Button>
              </StackPanel>
              <!-- Other Options -->
              <TextBlock 
                Classes="Caption" 
                Grid.Column="0" 
                Grid.Row="1" 
                Grid.ColumnSpan="2" 
                Text="Other Options: "
                Margin="0 10 0 0"/>
              <!-- Sections Filter -->
              <CheckBox
                x:Name="CB_OpenSectionOnly"
                Content="Open Section Only"
                Grid.Column="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Grid.Row="2"
                Margin="0 10 0 0">
              </CheckBox>
              <CheckBox
                x:Name="CB_ShowFC"
                Content="Show Freshman Connection Program"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Grid.Column="1"
                Grid.Row="2"
                Margin="10 10 0 0">
              </CheckBox>
              <Expander
                x:Name="MUIB_NoInstructors"
                Grid.Column="0"
                Grid.Row="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Header="Exclude These Instructors:"
                Margin="0 10 0 0">
              </Expander>
              <Expander
                x:Name="MUIB_NoTime"
                Grid.Column="1"
                Grid.Row="3"
                HorizontalAlignment="Left"
                Header="Exclude These Time Periods: "
                Margin="10 10 0 0">
                <TextBlock Text="Test"/>
              </Expander>
              <!-- Semester Panel -->
              <StackPanel
                x:Name="AcademicYearPanel"
                Orientation="Horizontal"
                Grid.Column="0"
                Grid.Row="4"
                Margin="0 10 0 0"
                Spacing="10">
                <TextBlock
                  Classes="Label"
                  Text="Semester:"
                  VerticalAlignment="Center">
                </TextBlock>
                <ComboBox
                  x:Name="Semester"
                  SelectedIndex="2"
                  Width="100"
                  Height="30"
                  VerticalAlignment="Center">
                </ComboBox>
              </StackPanel>
              <Button
                Grid.Column="1"
                Grid.Row="5"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Margin="10 10 0 0">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Classes="Icon" Text="&#xE105;" Foreground="{DynamicResource HighlightForegroundBrush}"/>
                  <TextBlock Text="Save Querry" Foreground="{DynamicResource HighlightForegroundBrush}"/>
                </StackPanel>
              </Button>
            </Grid>
            <StackPanel
              x:Name="SP_Course"
              Grid.Row="2"
              Grid.Column="0"
              Margin="0 10 0 0">
            </StackPanel>
          </Grid>
        </ScrollViewer>
      </Grid>
    </Border>
    <Border 
      Classes="Card" 
      Grid.Column="1"
			Grid.Row="0"
			Grid.RowSpan="2">
      <Grid RowDefinitions="Auto Auto *">
        <TextBlock
          Classes="Heading"
          Margin="0"
          Text="Combinations"
          Grid.Row="0"/>
        <StackPanel
          Orientation="Horizontal"
          Grid.Row="1">
          <TextBlock
            Classes="Caption"
            Margin="0"
            x:Name="Count"
            Text="0"/>
          <TextBlock 
            Classes="Caption"
            Margin="0"
            Text=" Results in Total"/>
        </StackPanel>
        <ItemsControl
          x:Name="MainGrid"
          Grid.Row="2"
          Margin="0,10,0,0">
        </ItemsControl>
      </Grid>
    </Border>
    <Border Classes="Card" Grid.Row="1" Grid.Column="0">
      <Grid RowDefinitions="Auto Auto">
        <TextBlock Grid.Row="0" Classes="Heading" Text="Schedule"/>
      </Grid>
    </Border>
