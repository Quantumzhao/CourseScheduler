<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CourseScheduler.Avalonia.Views.AboutView">
  <Border Classes="Card">
    <StackPanel Spacing="10" HorizontalAlignment="Center">
      <TextBlock Classes="Heading" Text="Contact Information"/>
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Author: "/>
        <TextBlock Classes="Caption" Text="Quantum"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Email: "/>
        <TextBlock Classes="Caption" Text="quantumzhao@protonmail.ch"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Github repo: "/>
        <TextBlock Classes="Caption" Text="https://github.com/Quantumzhao/CourseSelection"/>
      </StackPanel>
      <Viewbox Width="200" Height="200" Margin="0 20 0 0">
        <Image Source="/Assets/icon_large.png" />
      </Viewbox>
    </StackPanel>
  </Border>
</UserControl>
