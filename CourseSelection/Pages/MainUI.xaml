<UserControl x:Class="CourseSelection.MainUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseSelection"
			 xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid Margin="0,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="156"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<ScrollViewer Grid.Row="1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<TextBlock 
						Text="New Course" 
						Style="{StaticResource ResourceKey=Heading1}" 
						Grid.Column="0" 
						Grid.ColumnSpan="2" 
						Grid.Row="0" 
						Margin="0,0,0,10"/>
					<StackPanel 
						Grid.Column="0" 
						Grid.Row="1" 
						Orientation="Horizontal" 
						Margin="0,0,0,10"
						Grid.ColumnSpan="2">
						<mui:ModernButton x:Name="MUIB_Add" Margin="0" VerticalAlignment="Center" IconData="{StaticResource ResourceKey=Add}" Click="MUIB_Add_Click"/>
						<TextBlock 
							Text="Pick one: " 
							VerticalAlignment="Center" Margin="5,0,0,0"/>
						<TextBox
							x:Name="TB_CourseName"
							Width="100"
							Height="Auto" 
							VerticalAlignment="Center" Margin="5,0,0,0"/>
					</StackPanel>
					<TextBlock 
						Text="OTHER OPTIONS" 
						Style="{StaticResource ResourceKey=Heading2}" 
						Grid.Column="0" 
						Grid.ColumnSpan="2" 
						Grid.Row="1" 
						Margin="29,33.5,0,10" Grid.RowSpan="2" VerticalAlignment="Center"/>
					<mui:ModernButton x:Name="Expander"
						Grid.Column="0"
						Grid.Row="2"
						IconData="{StaticResource ResourceKey=Expand}"
						EllipseStrokeThickness="1"
						HorizontalAlignment="Left" 
						VerticalAlignment="Center" 
						Margin="0,0,0,10" Click="Expander_Click">
					</mui:ModernButton>
					<CheckBox x:Name="CB_OpenSectionOnly" 
						Content="Open Section Only" 
						Grid.Column="0" 
						VerticalAlignment="Top" 
						HorizontalAlignment="Left" 
						Margin="5,0,0,10" 
						Grid.Row="3"/>
					<CheckBox x:Name="CB_ShowFC" 
						Content="Show Freshman Connection Program" 
						Margin="5,0,0,10" 
						VerticalAlignment="Top" 
						HorizontalAlignment="Left" 
						Grid.Column="1" 
						Grid.Row="3"/>
					<mui:ModernToggleButton
						x:Name="MUIB_NoInstructors" 
						Grid.Column="0" 
						HorizontalAlignment="Left" 
						VerticalAlignment="Top" 
						Margin="0" 
						Grid.Row="4"
						IconData="{StaticResource ResourceKey=Person}"
						IsEnabled="True"
						Content="Exclude These Instructors:" Checked="MUIB_NoInstructors_Checked" LostFocus="MUIB_NoInstructors_LostFocus" Unchecked="MUIB_NoInstructors_Unchecked">
					</mui:ModernToggleButton>
					<mui:ModernToggleButton x:Name="MUIB_NoTime" 
						Grid.Row="4" 
						Grid.Column="1" 
						HorizontalAlignment="Left" 
						VerticalAlignment="Top" 
						Margin="0"
						IconData="{StaticResource ResourceKey=Clock}"
						IsEnabled="True"
						Content="Exclude These Time Periods:"/>
					<StackPanel x:Name="AcademicYearPanel" 
						Orientation="Horizontal"
						Grid.Column="0" 
						Grid.Row="5" 
						Margin="27, 3, 0, 0">
						<TextBlock 
							Text="Academic Year:" VerticalAlignment="Center"/>
						<ComboBox x:Name="Year" SelectedIndex="0" Margin="10, 0, 0, 0" VerticalAlignment="Center" Loaded="Year_Loaded">
							<!--<ComboBoxItem Content="2019"></ComboBoxItem>-->
						</ComboBox>
					</StackPanel>
					<StackPanel x:Name="SemesterPanel" 
						Orientation="Horizontal"
						Grid.Column="1" 
						Grid.Row="5" 
						Margin="27, 3, 0, 0">
						<TextBlock 
							Text="Semester: " VerticalAlignment="Center"/>
						<ComboBox x:Name="Semester" SelectedIndex="0" Margin="10, 0, 0, 0" VerticalAlignment="Center" Loaded="Semester_Loaded">
							<!--<ComboBoxItem Content="Fall"></ComboBoxItem>-->
						</ComboBox>
					</StackPanel>
				</Grid>
				<StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
			</Grid>
		</ScrollViewer>
		<Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,-0.5">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<TextBlock 
				Text="Combinations" 
				Style="{StaticResource ResourceKey=Heading1}" 
				Grid.Row="0" Margin="0,0,0,10"/>
			<StackPanel 
				Orientation="Horizontal" 
				Grid.Row="1">
				<TextBlock Text="0"/>
				<TextBlock Text=" Results in Total"/>
			</StackPanel>
			<DataGrid Grid.Row="2" Margin="0,10,0,0"/>
		</Grid>
